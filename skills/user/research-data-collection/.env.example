# Research Data Collection - Environment Variables Configuration
# Copy this file to .env and fill in your actual API keys

# ============================================
# ECONOMICS & FINANCE DATA SOURCES
# ============================================

# World Bank API (Optional - public data doesn't require key)
# Get from: https://datahelpdesk.worldbank.org/knowledgebase/articles/889392-about-the-indicators-api-documentation
WORLD_BANK_API_KEY=

# Federal Reserve Economic Data (FRED)
# Get from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=

# U.S. Census Bureau API
# Get from: https://api.census.gov/data/key_signup.html
CENSUS_API_KEY=

# Quandl/NASDAQ Data Link (Optional, for financial data)
# Get from: https://data.nasdaq.com/
QUANDL_API_KEY=

# ============================================
# MEDICAL & PUBLIC HEALTH DATA SOURCES
# ============================================

# PubMed API (NCBI E-utilities)
# Get from: https://www.ncbi.nlm.nih.gov/account/
NCBI_API_KEY=

# openFDA API (Optional - public data doesn't require key)
# Get from: https://open.fda.gov/apis/authentication/
FDA_API_KEY=

# ============================================
# GENERAL RESEARCH DATA
# ============================================

# Dataverse API (for specific installations)
# Example: Harvard Dataverse
# Get from: Your Dataverse instance account settings
DATAVERSE_API_KEY=
DATAVERSE_SERVER=https://dataverse.harvard.edu

# Zenodo API (for archived research data)
# Get from: https://zenodo.org/account/settings/applications/
ZENODO_API_KEY=

# ============================================
# WEB SCRAPING CONFIGURATION
# ============================================

# User agent for web scraping (identify yourself)
USER_AGENT=Mozilla/5.0 (compatible; ResearchBot/1.0; +http://yourwebsite.edu/bot)

# Rate limiting (requests per second)
RATE_LIMIT_DELAY=1.0

# ============================================
# DATABASE CONFIGURATION (if using local databases)
# ============================================

# PostgreSQL/MySQL configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=research_data
DB_USER=
DB_PASSWORD=

# ============================================
# CLOUD STORAGE (for large datasets)
# ============================================

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Google Cloud Storage
GCS_PROJECT_ID=
GCS_BUCKET_NAME=

# ============================================
# NOTIFICATION SETTINGS (Optional)
# ============================================

# Email notifications for long-running collections
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# ============================================
# PROXY SETTINGS (if behind institutional proxy)
# ============================================

HTTP_PROXY=
HTTPS_PROXY=

# ============================================
# LOGGING AND DEBUGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
LOG_FILE=data_collection.log

# ============================================
# NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. Add .env to your .gitignore file
# 3. Keep API keys secure and rotate them regularly
# 4. Some APIs have free tiers that don't require keys
# 5. Always check rate limits for each API
# 6. Document which keys are required for your specific project
